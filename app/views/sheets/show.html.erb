<div class="row">
  <div class="col col-xs-12 col-sm-5 col-md-2 block_left">
    <%= render partial: "tags/index", locals: { tags: @tags, selected_tag: (@tag || @sheet.tags.first) } %>
  </div>
  <div class="col col-xs-12 col-sm-7 col-md-3 block_centre">
    <%= render partial: "tags/show", locals: { tag: (@tag || @sheet.tags.first), selected_sheet: @sheet } %>
  </div>
  <div class="col col-xs-12 col-sm-12 col-md-7 block_right">
    <%= render partial: "sheets/show", locals: { sheet: @sheet } %>
  </div>
</div>
